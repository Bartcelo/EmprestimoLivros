@model EmprestimosModel


@{
    ViewData["title"] = "Tela de Excluir";
}

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-warning">Excluir Registros</h1>
        <h2 class="text-danger">Deseja realmente apagar o Registro?</h2>
    </div>

    <form method="post" asp-controller="Emprestimo" asp-action="Delete">
        <input type="hidden" asp-for="Id" />


        <div class="mb-3">
            <label for="Recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Recebedor" asp-route-value="@Model.Recebedor " id="Recebedor" placeholder="Quem vai recebero Livro" disabled>
            <span class="text-danger" asp-validation-for="Recebedor"></span>

        </div>
        <div class="mb-3">
            <label for="Fornecedor" class="form-label text-light">Fornecedor</label>
            <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem esta emprestando o livro" disabled>
            <span class="text-danger" asp-validation-for="Fornecedor"></span>

        </div>
        <div class="mb-3">
            <label for="Livro" class="form-label text-light">Livro</label>
            <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual o livro emprestado" disabled>
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>

        </div>


        <div class="d-flex gap-5 mt-5">

            <button type="submit" class="btn btn-success w-50">Excluir</button>
            <a class="btn btn-primary mx-2 w-50" asp-action="">Voltar</a>

        </div>
    </form>

</div>

