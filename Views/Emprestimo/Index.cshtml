
@{
    ViewData["title"] = "Tela de listagem";
}

@model IEnumerable<EmprestimosModel>




    <div class="container text-center">

    
            <div class="d-flex justify-content-between align-items-center mb-5">

        <h1>Lista de Livros Emprestados</h1>
        <a class="btn btn-success mx-2" asp-controller="Emprestimo" asp-action="Cadastro">Cadastro</a>
            </div>

   

    
    


<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">Recebedor</th>
            <th scope="col">Fornecedor</th>
            <th scope="col">Livro</th>
            <th scope="col">Data Emprestimo
                   
            </th>
            
                
        </tr>
    </thead>
    <tbody>

        @if(Model != null){


            @foreach (var emprestimos in Model)
            {
            <tr>
                <th scope="row">@emprestimos.Recebedor 

                </th>
                <td>@emprestimos.Fornecedor</td>
                <td>@emprestimos.LivroEmprestado</td>
                <td>@emprestimos.DataUltimaAtualizacao</td>
                <td>

                            <a class="btn btn-warning" asp-controller="Emprestimo" asp-action="Update" asp-route-id="@emprestimos.Id" >Update</a>
                            <a class="btn btn-danger" asp-controller="Emprestimo" asp-action="Delete" asp-route-id="@emprestimos.Id" >Delete</a>
                 </td>
            </tr>
            }

        }
        else
        {
            <tr>
                <th scope="row">Não encontrado</th>
                <td>Não encontrado</td>
                <td>Não encontrado</td>
                <td>Não encontrado</td>
            </tr>

        }


      
      
    </tbody>
</table>
</div>


